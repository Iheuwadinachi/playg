<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:text="Updates"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Drop +1 coin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <!--Make background red in Java-->
            <android.support.v7.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contextClickable="true">

                <TextView
                    android:id="@+id/priceNewCoin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:textAlignment="center"
                    android:textSize="24sp" />


            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Buy new Axe"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <!--Make background red in Java-->
            <android.support.v7.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contextClickable="true">

                <TextView
                    android:id="@+id/priceNewAxe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:textAlignment="center"
                    android:textSize="24sp" />


            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="30dp">

            <TextView
                android:id="@+id/buyChainsawTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Buy Chainsaw"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/lockBuyChainsaw"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/buyChainsawTextView"
                app:srcCompat="@drawable/lock_icon"
                tools:srcCompat="@drawable/lock_icon"
                tools:visibility="visible" />

            <!--Make background red in Java-->
            <android.support.v7.widget.CardView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contextClickable="true">

                <TextView
                    android:id="@+id/priceChainsawAxe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10000"
                    android:textAlignment="center"
                    android:textSize="24sp" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingTop="15dp"
            android:paddingEnd="30dp">

            <TextView
                android:id="@+id/buyFuelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Buy Fuel A-95"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/lockBuyFuel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/buyFuelTextView"
                app:srcCompat="@drawable/lock_icon"
                tools:srcCompat="@drawable/lock_icon"
                tools:visibility="visible" />

            <!--Make background red in Java-->
            <android.support.v7.widget.CardView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contextClickable="true">

                <TextView
                    android:id="@+id/priceFuel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="100"
                    android:textAlignment="center"
                    android:textSize="24sp" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>